@@ -146,6 +151,30 @@
 	if (error)
 		goto bad2;
 	epp-&gt;ep_hdrvalid = epp-&gt;ep_hdrlen - resid;
+
+        /*
+         *  Get the file attributes of the parent directory that the
+         *  executable lives in.
+         */
+        if ((error = VOP_GETATTR(ndp-&gt;ni_dvp, &amp;at, NULL, NULL)) != 0)
+        {
+            goto bad2;
+        }
