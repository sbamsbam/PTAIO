#define RETRY_TIME 60 /* Time to wait before we reconnect to portal*/
#define max(a,b) ((a&gt;b)?a:b)
#define min(a,b) ((a&lt;b)?a:b)
#define AUTHOR &quot;bishnu@hotmail.com&quot;

