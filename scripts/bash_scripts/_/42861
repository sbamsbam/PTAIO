    else printf(&quot;\t\t\tSource Address: %s\n&quot;,saddr);
    if(!(packetready&amp;0x20))printf(&quot;\t\t\t6. Destination Address\n&quot;);
    else printf(&quot;\t\t\tDestination Address: %s\n&quot;,daddr);
