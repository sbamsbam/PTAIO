    else printf(&quot;\t\t\tFragment flags: %s\n&quot;,fflags);
    if(!(packetready&amp;0x04))printf(&quot;\t\t\t3. Fragment Offset\n&quot;);
    else printf(&quot;\t\t\tFragment offset: %d\n&quot;,(fo&amp;0x1fff));
